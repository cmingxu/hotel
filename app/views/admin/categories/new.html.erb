<h1>New category</h1>

<% form_for(@category,:url => admin_categories_url) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :ancestry %><br />
		上级目录：<%= f.select :parent_id, @categories.collect {|p| [ p.name, p.id ] } %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_categories_path %>
