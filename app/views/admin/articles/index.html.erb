<h3 class='path'>新闻列表</h3>

<table class='j_table'>
  <tr>
    <th>标题</th>
    <th>创建人</th>
    <th>最后修改人</th>
    <th>状态</th>
    <th>操作</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%=h article.title %></td>
      <td><%=h article.created_by_who %></td>
      <td><%=h article.last_edit_by_who %></td>
      <td><%=h display_article_state(article.state) %></td>
      <td>  <%= link_to '预览', article %>
        <%= link_to '修改', edit_admin_article_path(article) %>
        <%= link_to '删除', admin_article_path(article), :confirm => '我要删除此文章?', :method => :delete %>
        <% unless article.hide? %>
          <%= link_to '隐藏', hide_admin_article_path(article),  :method => :put%>
        <% else %>
          <%= link_to '发布',publish_admin_article_path(article),  :method => :put%>
        <%end%>
      </td>


    </td>
  </tr>
<% end %>
</table>

